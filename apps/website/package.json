{
  "name": "@director.run/website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf .next node_modules",
    "dev": "next dev --turbopack --port 3003",
    "format": "bun run format:fix-classnames && bun run format:fix-imports && bun run format:fix-all",
    "format:fix-all": "biome format --write ./src",
    "format:fix-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write ./src",
    "format:fix-classnames": "biome lint --fix --unsafe --only=lint/nursery/useSortedClasses ./src",
    "lint": "biome check ./src",
    "start": "next start",
    "tools:shadcn": "bunx --bun shadcn@latest"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "motion": "^12.15.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "tailwindcss": "^4.1.7",
    "tailwindcss-radix": "^4.0.2",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.8.3"
  }
}
