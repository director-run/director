{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalEnv": ["LOOPS_API_KEY"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {
      "dependsOn": ["^format"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"]
    },
    "test": {
      "cache": false
    },
    "cli": {
      "cache": false
    }
  }
}
