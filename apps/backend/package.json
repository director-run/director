{
  "name": "@director.run/backend",
  "module": "index.ts",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf .turbo dist/*",
    "test": "bun run vitest  --fileParallelism=false",
    "start": "bun run bin/backend.ts",
    "dev": "bun run --watch bin/backend.ts",
    "build": "bun build ./bin/backend.ts --compile --outfile ./dist/backend",
    "inspector": "npx @modelcontextprotocol/inspector",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@director.run/utilities": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@trpc/server": "^11.0.2",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "raw-body": "^3.0.0",
    "slugify": "^1.6.6",
    "superjson": "^2.2.1",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/content-type": "^1.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/raw-body": "^2.3.0",
    "@types/semver": "^7.7.0",
    "type-fest": "^4.40.0"
  }
}
