{
  "name": "@director.run/core",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf .turbo dist/*",
    "dev": "bun run build --watch",
    "format": "biome format --write .",
    "lint": "biome check .",
    "test": "bun run vitest  --fileParallelism=false",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    "./start-service": {
      "types": "./dist/start-service.d.ts",
      "import": "./dist/start-service.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./helpers/*": {
      "types": "./dist/helpers/*.d.ts",
      "import": "./dist/helpers/*.js"
    },
    "./trpc/*": {
      "types": "./dist/trpc/*.d.ts",
      "import": "./dist/trpc/*.js"
    },
    "./http/*": {
      "types": "./dist/http/*.d.ts",
      "import": "./dist/http/*.js"
    }
  },
  "dependencies": {
    "@director.run/utilities": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "@trpc/client": "^11.0.2",
    "@trpc/server": "^11.0.2",
    "content-type": "^1.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "raw-body": "^3.0.0",
    "slugify": "^1.6.6",
    "superjson": "^2.2.1",
    "tsup": "^8.4.0",
    "zod": "^3.24.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/content-type": "^1.1.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/raw-body": "^2.3.0",
    "@types/semver": "^7.7.0",
    "type-fest": "^4.40.0"
  }
}
