{
  "name": "website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf .next node_modules",
    "dev": "next dev --turbopack --port 3001",
    "format": "bun run format:fix-classnames && bun run format:fix-imports && bun run format:fix-all",
    "format:fix-all": "biome format --write ./src",
    "format:fix-imports": "biome check --formatter-enabled=false --linter-enabled=false --organize-imports-enabled=true --write ./src",
    "format:fix-classnames": "biome lint --fix --unsafe --only=lint/nursery/useSortedClasses ./src",
    "lint": "biome check ./src",
    "start": "next start",
    "tools:shadcn": "bunx --bun shadcn@latest"
  },
  "dependencies": {
    "@director.run/db": "workspace:*",
    "@director.run/service": "workspace:*",
    "@hookform/resolvers": "^5.0.1",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-popover": "^1.1.11",
    "@radix-ui/react-separator": "^1.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-tabs": "^1.1.9",
    "@tanstack/react-query": "^5.74.4",
    "@trpc/client": "^11.1.1",
    "@trpc/next": "^11.1.1",
    "@trpc/react-query": "^11.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "nuqs": "^2.4.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.56.1",
    "react-hotkeys-hook": "^5.0.1",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.2.0",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "tailwindcss": "^4",
    "tailwindcss-radix": "^4.0.2",
    "tw-animate-css": "^1.2.8",
    "typescript": "^5"
  }
}
