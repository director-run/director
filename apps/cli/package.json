{
  "name": "@director.run/cli",
  "type": "module",
  "version": "0.0.4",
  "files": ["dist", "README.md"],
  "bin": {
    "director": "./dist/cli.js"
  },
  "scripts": {
    "lint": "biome check .",
    "format": "biome format --write .",
    "clean": "rm -rf .turbo dist/*",
    "test": "bun run vitest  --fileParallelism=false",
    "cli": "bun run bin/cli.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun build --production --target=node bin/cli.ts --outdir dist",
    "release": "bun publish --access public",
    "prepare": "bun run build"
  },
  "dependencies": {
    "@director.run/service": "workspace:*",
    "@director.run/config": "workspace:*",
    "@director.run/db": "workspace:*",
    "@director.run/mcp": "workspace:*",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0",
    "superjson": "^2.2.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "type-fest": "^4.40.0"
  }
}
