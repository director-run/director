{
  "name": "@director/ui",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsup",
    "lint": "biome check .",
    "format": "biome format --write .",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist node_modules",
    "test": "echo 'No tests yet for design package'"
  },
  "files": ["dist", "assets"],
  "exports": {
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js",
      "require": "./dist/lib/*.cjs"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js",
      "require": "./dist/components/*.cjs"
    }
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "motion": "^12.5.0",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.5",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
