{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "bun run clean && bun run cli:build && bun run backend:build && bun run frontend:dev",
    "beforeBuildCommand": "bun run clean && bun run frontend:build && bun run backend:build && bun run cli:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Director",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/backend",
            "sidecar": true
          }
        ]
      }
    },
    "windows": [
      {
        "title": "Director",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.working.director",
      "externalBin": ["binaries/cli", "binaries/backend"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "entitlements": "./Entitlements.plist"
      }
    }
  }
}
